#!/usr/bin/env python2.7
# -*- coding: utf-8 -*-

if __name__ == "__main__":
    import os, sys, argparse, layer_importer, psycopg2 as dbapi2
    try:
        from StringIO import StringIO
    except ImportError:
        from io import StringIO, BytesIO

    ArgP = argparse.ArgumentParser(description="")
    ArgP.add_argument("--api_url", default="http://localhost:8080/geoserver")
    ArgP.add_argument("--api_user", default="admin")
    ArgP.add_argument("--api_password", default="geoserver")
    ArgP.add_argument("--db_host", default="localhost")
    ArgP.add_argument("--db_port", default=5432)
    ArgP.add_argument("--db_user", default="viewers")
    ArgP.add_argument("--db_name", default="viewer_taesp")
    ArgP.add_argument("--db_password", default="")
    ArgP.add_argument("workspace")
    ArgP.add_argument("datastore")
    ArgP.add_argument("name")
    ArgP.add_argument("srs")
    ArgP.add_argument("sql", type=argparse.FileType("rb"))
    ArgP.add_argument("sld", type=argparse.FileType("rb"))
    Args = ArgP.parse_args()

    db = dbapi2.connect(database=Args.db_name, user=Args.db_user, password=Args.db_password)
    cur = db.cursor()

    # CREATE VIEW vista AS SELECT text 'Hello World' AS hello;
    db.set_isolation_level(0)
    q = "CREATE VIEW {0} AS ".format(Args.name) + Args.sql.read()
    print q
    cur.execute(q)

    api = layer_importer.GeoserverApi(Args.api_url, Args.api_user, Args.api_password)
    # "taesp_ahrc_2007", "postgis_viewer_taesp"
    api.create_postgis_featuretype(Args.workspace, Args.datastore, Args.name, Args.srs)
    api.create_style(Args.workspace, Args.name, Args.sld.read())
    api.set_layer_style(Args.workspace, Args.name, Args.name)

    Args.sld.close()
    Args.sql.close()
